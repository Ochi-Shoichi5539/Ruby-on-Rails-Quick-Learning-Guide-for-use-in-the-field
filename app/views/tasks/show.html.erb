<h1>タスクの詳細</h1>
<div class="nav justify-content-end">
  <%= link_to "タスク一覧", tasks_path, class: "nav-link" %>
</div>

<table class="table table-hover">
  <tbody>
    <tr>
      <th>id: </th>
      <td><%= @task.id %></td>
    </tr>
    <tr>
      <th>name: </th>
      <td><%= @task.name %></td>
    </tr>
    <tr>
      <th>description: </th>
      <td><%= simple_format(h(@task.description), {}, sanitize: false, wrapper_tag: "div") %></td>
    </tr>
    <tr>
      <th>created_at: </th>
      <td><%= @task.created_at %></td>
    </tr>
    <tr>
      <th>updated_at: </th>
      <td><%= @task.updated_at %></td>
    </tr>
  </tbody>
</table>

<%= link_to "編集", edit_task_path(@task.id), class: "btn btn-primary" %>
<%= link_to "削除", task_path(task.id), method: :delete, data: { confirm: "タスク「#{task.name}」を削除します。よろしいですか？" }, class: "btn btn-primary" %>

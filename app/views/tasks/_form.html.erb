<%= form_with model: task, local: true do |form| %>

  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: 'form-control', id: 'task_name' %>
    <% @task.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :description %><br>
    <%= form.text_area :description, rows: 5, class: 'form-control', id: 'task_description' %>
    <% @task.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit nil, class: 'btn btn-primary' %>
  </div>
<% end %>